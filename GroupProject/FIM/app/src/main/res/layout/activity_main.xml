<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background_wallpaper_5"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/aladin"
        android:text="Flooring Icon Manager"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aladin"
        android:text="Canâ€™t-miss looks in tile, wood, stone and more."
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/customerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:backgroundTint="#FD9700"
        android:text="Customer"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/madeBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Made By: Tenzin, Fahim, Abdul, Alejandra, Marwan"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/employeeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerBtn"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FD9700"
        android:text="Employee"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="80dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/amaranth"
        android:text="Please Select Use Type:"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>