<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/TitleDetailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="67dp"
        android:text="Flooring Manager"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitleDetailView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textViewFloorCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="Floor Category:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/floorCategoryID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="200dp"
            android:layout_marginTop="25dp"
            android:text="Wood"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFloorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFloorCategory"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Floor Type:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFloorSpecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFloorType"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Floor Species:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFloorSpecies"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Color:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewColor"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Brand:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/floorTypeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floorCategoryID"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="102dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textViewFloorType"
            android:text="Solid"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/floorSpeciesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floorTypeID"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="Maple"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/colorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floorSpeciesID"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="Black"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brandID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorID"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="ABC"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Quantity:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantityID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceID"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="26 square feet"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userType"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Price:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sizeID"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="$20"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewBrand"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Size:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sizeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandID"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:text="2 square feet"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/menuBtn"
        android:layout_width="16dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="19dp"
        app:srcCompat="@drawable/_dots" />

</RelativeLayout>