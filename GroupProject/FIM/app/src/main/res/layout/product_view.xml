<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/floor_color_view"
                android:layout_width="49dp"
                android:layout_height="65dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:clickable="false"
                android:textColor="#000000"
                android:textSize="38sp"
                android:textStyle="bold"
                app:strokeColor="#ACA9A9"
                app:strokeWidth="3px"
                tools:outlineProvider="bounds" />

            <TextView
                android:id="@+id/floor_category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/floor_color_view"
                android:text="Tile"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/floor_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/floor_category_txt"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/floor_color_view"
                android:text="Porcelein"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/floor_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="29dp"
                android:layout_toStartOf="@+id/textView6"
                android:text="56"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="29dp"
                android:text="units available" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>